<%- include('../layouts/head.ejs') %>
<%- include('../layouts/internal-banner.ejs') %>
<div class="container">
    <div class="row">
        <% courses.forEach( course => { %>
            <div class="col-md-4">
                <h2 style="margin-bottom: 5px;margin-top: 5px;"><%= course.title %></h2>
                <img style="width:300px; height:200px;" src="<%= course.image %>" alt=''>
                <p><%= course.description %></p>
                <p><%= course.preview %></p>
                <button style="border:none; text-decoration: underline;cursor: pointer; margin-bottom: 15px;"><a href='/courses/<%= course.id%>'>Learn More</a></button>
                <button style="border:none; text-decoration: underline;cursor: pointer; margin-bottom: 15px;"><a href='/admin/courses/<%= course.id%>'>Delete</a></button>    
            </div>     
        <% }) %>
    </div>
</div>
<%- include('../layouts/footer.ejs') %>